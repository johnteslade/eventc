Import('env')

env.Append(CCFLAGS = '-g -Wall')

env.Append(LIBS = [
	'rt', # For mq
	'pthread',
])

source_files = [
	"myprog.c",
	"eventc_connections.c",
	"eventc_funcqueue.c",
	"eventc_timed.c",
	"eventc_main.c",
	"eventc_component.c",
	"Thread1.c",
	"Thread1_autogen.c",
	"Thread2.c",
	"Thread2_autogen.c",
	"Thread_Main.c",
	"Thread_Main_autogen.c",
]

env.Install(
	"#out/", 
	env.Program(
		target = "eventc", 
		source = source_files
		)
	)
